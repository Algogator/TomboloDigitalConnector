{
  "datasetSpecification" : {
    "subjectSpecification" : [
      {
        // The output geographies are sensors (traffic counters)
        "subjectType" : "sensor"
      }
    ],
    "datasourceSpecification" : [
      {
        // Importer for Local Authorities in the UK
        "importerClass" : "uk.org.tombolo.importer.ons.OaImporter",
        "datasourceId": "localAuthority"
      },
      {
        // Importer for the DfT traffic counts for London
        "importerClass" : "uk.org.tombolo.importer.dft.TrafficCountImporter",
        "datasourceId" : "London"
      }
    ],
    "fieldSpecification" : [
      {
        // An arthmetic field that divides one field value with another
        // In this case we calcluate for each sensor (traffic counter)
        // the number of bicicles counted as nominator
        // the sum of all bicicles counted in the surrounding local authority (denominator)
        "fieldClass": "uk.org.tombolo.field.ArithmeticField",
        "label": "theOutput",
        "operation": "div",

        "fieldSpecification1": {
          // This field returns the bicicle count for the particular output sensor
          "fieldClass": "uk.org.tombolo.field.LatestValueField",
          "label": "CountPedalCycles",
          "attribute": {
            "providerLabel" : "uk.gov.dft",
            "attributeLabel" : "CountPedalCycles"
          }
        },
        "fieldSpecification2": {
          // This field retuns the sum of all bicicles counted for all sensors (traffic counters)
          // aggregated to local authority level and then the local authority level value is mapped to the output sensor
          // and used as denominator
          "fieldClass": "uk.org.tombolo.field.MapToContainingSubjectField",
          "label": "localAuthoritySumCountPedalCycles",
          "containingSubjectType": "localAuthority",

          "fieldSpecification": {
            "fieldClass": "uk.org.tombolo.field.GeographicAggregationField",
            "label": "SumCountPedalCycles",
            "aggregationSubjectType": "sensor",
            "aggregationFunction": "sum",

            "fieldSpecification": {
              "fieldClass": "uk.org.tombolo.field.LatestValueField",
              "label": "CountPedalCycles",
              "attribute": {
                "providerLabel" : "uk.gov.dft",
                "attributeLabel" : "CountPedalCycles"
              }
            }
          }
        }
      }
    ]
  },
  "exporterClass" : "uk.org.tombolo.exporter.GeoJsonExporter"
}