// We want to work out the correlation between the number of bikes passing by a
// road sensor, and the angular cost of the road segment that sensor is on
{
  "datasetSpecification" : {
    "subjectSpecification" : [
      {
        "subjectType" : "sensor"
      }
    ],
    "datasourceSpecification" : [
      {
        "importerClass" : "uk.org.tombolo.importer.dft.TrafficCountImporter",
        "datasourceId" : "Milton Keynes"
      },
      {
        "importerClass" : "uk.org.tombolo.importer.spacesyntax.OpenSpaceNetworkImporter",
        "datasourceId" : "ssx_polyline_shapefile"
      }
    ],
    "fieldSpecification" : [
      {
        "fieldClass": "uk.org.tombolo.field.LatestValueField",
        "label": "CountPedalCycles",
        "attribute": {
          "providerLabel" : "uk.gov.dft",
          "attributeLabel" : "CountPedalCycles"
        }
      },
      // We use 'nearest road segment' as a means to determine which segment
      // the sensor is on
      {
        "fieldClass": "uk.org.tombolo.field.GeographicProximityField",
        "label": "SSxNode",
        "proximalSubjectType": "SSxNode",
        "maxRadius": 0.001,
        "fieldSpecification": {
          "fieldClass": "uk.org.tombolo.field.LatestValueField",
          "label": "angularCost",
          "attribute": {
            "providerLabel": "com.spacesyntax",
            "attributeLabel": "ABWC_N"
          }
        }
      }
    ]
  },
  "exporterClass" : "uk.org.tombolo.exporter.CSVExporter"
}
