{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "datasetSpecification": {
      "type": "object",
      "properties": {
        "subjectSpecification": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "subjectType": {
                "type": "string"
              },
              "provider": {
                "type": "string"
              },
              "matchRule": {
                "type": "object",
                "properties": {
                  "attribute": {
                    "type": "string",
                    "enum": ["label", "name"]
                  },
                  "pattern": {
                    "type": "string"
                  }
                },
                "required": [
                  "attribute",
                  "pattern"
                ],
                "additionalProperties": false
              },
              "geoMatchRule": {
                "type": "object",
                "properties": {
                  "geoRelation": {
                    "type": "string",
                    "enum": ["within"]
                  },
                  "subjectSpecifications": {
                    "type": "array"
                  }
                },
                "required": [
                  "geoRelation",
                  "subjectSpecifications"
                ],
                "additionalProperties": false
              }

            },
            "required": [
              "subjectType",
              "provider"
            ],
            "additionalProperties": false
          }
        },
        "datasourceSpecification": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "importerClass": {
                "type": "string"
              },
              "datasourceId": {
                "type": "string"
              },
              "configurationFile": {
                "type": "string"
              },
              "geographyScope": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "temporalScope": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "localData": {
                "type": "string"
              }
            },
            "required": [
              "importerClass",
              "datasourceId"
            ],
            "additionalProperties": false
          }
        },
        "fieldSpecification": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fieldClass": {
                "type": "string"
              },
              "label": {
                "type": "string"
              }
            },
            "required": [
              "fieldClass",
              "label"
            ]
          }
        }
      },
      "required": [
        "subjectSpecification",
        "datasourceSpecification",
        "fieldSpecification"
      ],
      "additionalProperties": false
    },
    "exporterClass": {
      "type": "string"
    }
  },
  "required": [
    "datasetSpecification",
    "exporterClass"
  ],
  "additionalProperties": false
}
